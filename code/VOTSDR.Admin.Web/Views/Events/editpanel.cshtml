@model VOTSDR.Data.Event


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Event</legend>

        @if (ViewBag.FormType == "Edit") {
            @Html.HiddenFor(model => model.EventId)
        }
                
        <div class="editor-label">Sort Date (not shown on site, used for soring events and stories)</div>
        <div class="editor-field">TODO!</div>

        <div class="editor-label">Title</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <div class="editor-label">Friendly Date (shown on site)</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>
        
        <div class="editor-label">Location</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Location)
            @Html.ValidationMessageFor(model => model.Location)
        </div>

        <div class="editor-label">Description</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>        
            @if (ViewBag.FormType == "Edit") {
                <input type="submit" value="Save" />
            }
            @if (ViewBag.FormType == "Create") {
                <input type="submit" value="Create" />
            }
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

