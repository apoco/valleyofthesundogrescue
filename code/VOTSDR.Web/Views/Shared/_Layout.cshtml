<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    @RenderSection("head")
</head>

<body>
        <div id="page" class="@ViewBag.PageClass">
		<div id="page-container">
			<div id="header">
				<div id="logo"></div>
				<div id="page-title">About Valley of the Sun Dog Rescue</div>
				<div id="header-top-nav">
					<ul>
						<li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "hnav-link-top", id = "hnav-link-home" })</li>
						<li>@Html.ActionLink("Adoptable Dogs", "Available", "Dog", null, new { @class = "hnav-link-top", id = "hnav-link-adoptable" })</li>
						<li>@Html.ActionLink("Happy Tails", "SuccessStories", "Dog", null, new { @class = "hnav-link-top", id = "hnav-link-stories" })</li>
						<li>@Html.ActionLink("How YOU Can Help", "HowToHelp", "Home", null, new { @class = "hnav-link-top", id = "hnav-link-howtohelp" })</li>
					</ul>
				</div>
				<div id="header-bottom-nav">
					<ul>
						<li>@Html.ActionLink("News / Events", "Index", "News", null, new { @class = "hnav-link-bottom", id = "hnav-link-news" })</li>
						<li>@Html.ActionLink("Education", "Education", "Home", null, new { @class = "hnav-link-bottom", id = "hnav-link-education" })</li>
						<li>@Html.ActionLink("Sponsors / Links", "SponsorsAndLinks", "Home", null, new { @class = "hnav-link-bottom", id = "hnav-link-sponsors" })</li>
						<li>@Html.ActionLink("Shop", "Shop", "Home", null, new { @class = "hnav-link-bottom", id = "hnav-link-shop" })</li>
						<li>@Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "hnav-link-bottom", id = "hnav-link-contact" })</li>
                        <li>- <a id="hnav-link-phone" class="hnav-link-bottom" href="tel:480-228-0126">480.228.0126</a></li>
					</ul>
				</div>
			</div>
			<div id="content-wrapper">
                <div id="content">
				@RenderBody()
                </div>
			</div>
			<div id="footer">
				<div id="footer-donations" class="footer-section">
					<span id="fst-donations">Donations Welcome!</span>
					<p>Your tax-deductible support for surgery, vet care and supplies is always appreciated.</p>
					<div>
            We accept donations through PayPal.
            <form action="https://www.paypal.com/cgi-bin/webscr" method="post" style="display: inline">
              <input type="hidden" name="cmd" value="_s-xclick">
              <input type="hidden" name="hosted_button_id" value="KMBFDNHC9EMQQ">
              <input type="image" src="@Url.Content("~/Content/images/btn-donate.gif")" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!" id="link-paypal">
              <img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1">
            </form> 
					  Or, learn about more 
            @Html.ActionLink(
              "ways you can help.", "HowToHelp", "Home", null,
              new { style = "font-weight: bold" })
          </div>
				</div>
				<div id="footer-locations" class="footer-section">
                    <a id="adoptiontimesandlocations"></a>
					<span id="fst-locations">Adoption Times and Locations:</span>
					<div id="fs-location">
						<p><b>East Valley</b></p>
						<p><b><a href="http://goo.gl/maps/Ozpo" target="_blank">PetSmart Directions</a></b><br/>
						6932 E. Hampton Ave<br/>Mesa</p>
					</div>
					<div id="fs-times">
						<p><b>Times</b></p>
						<p>Saturdays and Sundays<br/>
						10:00am - 2:00pm</p>
					</div>
				</div>
				<div id="footer-dotw" class="footer-section">
					<span id="fst-dotw">Dog of the Week</span>
					<div id="fs-dotw-thumb">
            <a href="@Url.Action("Available", "Dog")#dog-@ViewBag.DogOfTheWeek.Id">
              <img src="@ViewBag.DogOfTheWeek.ThumbnailUrl" 
                alt="@ViewBag.DogOfTheWeek.Name" />
            </a>
					</div>
					<div id="fs-dotw-details">
						<div id="fs-dotw-details-name">@ViewBag.DogOfTheWeek.Name</div>
						<div id="fs-dotw-details-breed">@ViewBag.DogOfTheWeek.Breed,</div>
						<div id="fs-dotw-details-desc">@ViewBag.DogOfTheWeek.Age</div>
            @{ string dogId = ViewBag.DogOfTheWeek.Id.ToString(); }
            @Html.ActionLink(
                "Learn more...", "Available", "Dog", null, null, 
                "dog-" + dogId, null, new { id = "fs-dotw-details-link" } )
					</div>
				</div>
				<div id="footer-nav">
					<div id="footerbkg"></div>
					<ul>
						<li>
              @Html.ActionLink(
                  "Home", "Index", "Home", null,
                  new { id = "fnav-link-home", @class = "fnav-link first" })
            </li>
						<li>
              @Html.ActionLink(
                  "Adoptable Dogs", "Available", "Dog", null,
                  new { id = "fnav-link-adoptable", @class = "fnav-link" })
            </li>
						<li>
              @Html.ActionLink(
                  "Happy Tails", "SuccessStories", "Dog", null,
                  new { id = "fnav-link-stories", @class = "fnav-link" })
            </li>
						<li>
              @Html.ActionLink(
                  "How YOU Can Help", "HowToHelp", "Home", null,
                  new { id = "fnav-link-howtohelp", @class = "fnav-link" })
            </li>
						<li>
              @Html.ActionLink(
                  "News / Events", "Index", "News", null,
                  new { id = "fnav-link-news", @class = "fnav-link" })
            </li>
						<li>
              @Html.ActionLink(
                  "Education", "Education", "Home", null,
                  new { id = "fnav-link-education", @class = "fnav-link" })
            </li>
						<li>
              @Html.ActionLink(
                  "Sponsors / Links", "SponsorsAndLinks", "Home", null,
                  new { id = "fnav-link-sponsors", @class = "fnav-link" })
            </li>
						<li>
              @Html.ActionLink(
                  "Shop", "Shop", "Home", null,
                  new { id = "fnav-link-shop", @class = "fnav-link" })
            </li>
						<li>
              @Html.ActionLink(
                  "Contact Us", "ContactUs", "Home", null,
                  new { id = "fnav-link-contact", @class = "fnav-link last" })
            </li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
