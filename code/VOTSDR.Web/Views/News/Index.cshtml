@model IEnumerable<VOTSDR.Web.Models.NewsOrEventViewModel>
@{
    ViewBag.Title = "Index";
    ViewBag.PageClass = "news";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head { 
<style type="text/css">
.news h2
{
    margin-bottom: 7px;
    padding: 5px 0 5px 10px;
    border-top: 3px solid #fffdc1;
    border-bottom: 3px solid #fffdc1;
    text-transform: uppercase;
    background: transparent url(../Content/images/bg-content-blocks.jpg) repeat-x 0 -5px;
    color: #9f282f;
    width: 974px;
}

.article-or-event
{
    margin-bottom: 1em;
    padding: 15px 20px;
    border-bottom: 1px solid #fffdc1;
    width: 939px;
}

.event 
{
	background:	#fffdc1;
}

.title
{
	font-size: 16pt;
	margin: 0 0 5px 0;
}
.event .date
{
    font-size: 11pt;
    margin: 4px 0;
    padding: 0 0 3px 0;
    border-bottom: 2px solid white;
}

.newsarticle .date
{
    font-size: 11pt;
    margin: 4px 0;
}
.summary
{
    margin: 0 0 5px 0;
}
</style>
}

<h2>The Latest</h2>

@foreach (var item in Model)
{
    string which = item.IsEvent ? "event" : "newsarticle";
           
  <div class="article-or-event @which">
    <a id="item-@item.Id"></a>
    @if (item.IsEvent)
    {
        <div class="date">
          @if (item.IsUpcoming)
          {
            <span>Upcoming Event:</span>
          }
          else
          {
            <span>Event:</span>
          }
          @item.Date
        </div>
        <div class="title">@item.Title </div>
    }
    else
    {
        <div class="title"><span>News: </span> @item.Title - <span class="date">@item.Date</span></div>
        
    }
    @if (string.IsNullOrEmpty(item.Location))
    {
      <div class="location">@item.Location</div>
    }
    <div class="content">
      @Html.Partial("TextBlock", item.Summary ?? string.Empty)
    </div>
  </div>
}

