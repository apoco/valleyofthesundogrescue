@model VOTSDR.Data.NewsStory

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>News Story</legend>

        @if(ViewBag.FormType=="Edit") {
            @Html.HiddenFor(model => model.NewsStoryId)
        }
        
        <div class="editor-label">Sort Date (not shown on site, used for soring events and stories)</div>
        <div class="editor-field">TODO!</div>

        <div class="editor-label">Friendly Date (shown on site)</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">Title</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">Story</div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Text, new { @class = "edit-textarea " })
            @Html.ValidationMessageFor(model => model.Text)
        </div>

        <p> 
            @if (ViewBag.FormType == "Edit") {
                <input type="submit" value="Save" />
            }
            @if (ViewBag.FormType == "Create")
            {
                <input type="submit" value="Create" />
            }
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

